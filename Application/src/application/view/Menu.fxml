<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.Menu">
   <center>
      <ScrollPane hbarPolicy="NEVER" prefWidth="750.0" vbarPolicy="NEVER" BorderPane.alignment="TOP_CENTER">
         <content>
            <VBox alignment="CENTER" prefHeight="550.0" prefWidth="750.0" spacing="15.0">
               <children>
                  <Label text="VARpedia" underline="true">
                     <font>
                        <Font size="91.0" />
                     </font>
                  </Label>
                  <Button fx:id="_create" alignment="CENTER" graphicTextGap="30.0" mnemonicParsing="false" onAction="#openSearch" prefHeight="60.0" prefWidth="400.0" text="Create">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/create.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="_videos" alignment="CENTER" graphicTextGap="30.0" mnemonicParsing="false" onAction="#videoList" prefHeight="60.0" prefWidth="400.0" text="Videos">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/video.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="_quiz" alignment="CENTER" graphicTextGap="30.0" mnemonicParsing="false" onAction="#openQuiz" prefHeight="60.0" prefWidth="400.0" text="Quiz">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/quiz.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Button>
                  <Button fx:id="_help" mnemonicParsing="false" onAction="#openHelp" prefHeight="50.0" prefWidth="60.0">
                     <font>
                        <Font size="21.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/helpwhite.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
